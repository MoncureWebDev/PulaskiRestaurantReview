<div class="jumbotron tablecontainer">
<h2>Search Results</h2>
<br>
<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      
      <th>Website</th>
      <!--th colspan="3"></th-->
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td class="tdName"><%= link_to restaurant.name, restaurant, class: "btn btn-link restaurantname" %></td>
        <td class="tdPhone"><%= restaurant.phone %></td>
        <td class="tdAddress"><%= restaurant.address %></td>
       
        <td class="tdWebsite"><%= link_to restaurant.website, restaurant.website %></td>

      </tr>
    <% end %>
  </tbody>
</table>

</div><!--END .table-responsive-->

</div><!--End .tablecontainer-->
